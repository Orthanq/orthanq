{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "datasets": {"haplotype_fractions": [{"haplotype": "A1", "fraction":0.5, "solution": 1, "density": 30}, {"haplotype":"A2", "fraction": 0.2, "solution": 1, "density": 30}, {"haplotype":"A3", "fraction":0.3, "solution": 1, "density": 30}, {"haplotype": "A1", "fraction":0.2, "solution": 2, "density": 20}, {"haplotype": "A2", "fraction": 0.1, "solution": 2,"density": 20}, {"haplotype": "A3", "fraction": 0.7, "solution":2, "density": 20}, {"haplotype": "A1", "fraction": 0.2, "solution": 3, "density": 10}, {"haplotype": "A2", "fraction": 0.3, "solution": 3, "density": 10}, {"haplotype": "A3", "fraction": 0.5, "solution":3, "density": 10}]},
  "data": {"name": "haplotype_fractions"},
  "transform": [
    {"calculate": "datum.density*datum.fraction", "as": "posterior density"}
  ],
  "mark": "bar",
  "encoding": {
  "x": {"field": "solution_number", "type": "ordinal", "axis": {"labels": false}},
  "y": {"type": "quantitative", "aggregate": "sum", "field": "posterior density", "axis": {"titleFontSize": 12}},
  "color": {
    "field": "haplotype",
    "scale": {"scheme": "category10"}
    }
    }
}
